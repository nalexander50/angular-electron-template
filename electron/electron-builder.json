{
    "directories": {
        "output": "release/"
    },
    "files": [
        {
            "from": ".",
            "to": "./",
            "filter": [
                "package.json"
            ]
        },
        {
            "from": "./dist",
            "to": "./dist",
            "filter": [
                "**/*.js"
            ]
        },
        {
            "from": "../dist/angular-electron-template",
            "to": "./dist",
            "filter": [
                "**/*"
            ]
        }
    ],
    "win": {
        "target": [
            "portable"
        ]
    },
    "mac": {
        "target": [
            "dir"
        ]
    },
    "linux": {
        "target": [
            "AppImage"
        ]
    }
}
